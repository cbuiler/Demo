<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <com.demo.dj.HuanXin.views.CircleImageView
        android:id="@+id/personnel_list_item_pic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:src="@drawable/header_icon" />

    <TextView
        android:id="@+id/personnel_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/personnel_list_item_pic"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/personnel_list_item_go_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow_right" />

    <TextView
        android:id="@+id/personnel_list_item_used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/personnel_list_item_go_detail"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/personnel_list_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@id/personnel_list_item_used"
        android:layout_toRightOf="@id/personnel_list_item_name"
        android:textColor="@color/black"
        android:textSize="13sp" />

</RelativeLayout>